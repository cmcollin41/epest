
  <div class="container marginTopL">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
          <div class="panel-heading center" style="padding: 0px;">
            <%= image_tag('ranger_flat.png', width: 250) %>
          </div>
          <div class="panel-body">
            <%= form_for @lead do |f| %>
              <div class="form-group">
                <%= f.text_field :street_address, id: "street-address", placeholder: "Street Address", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.text_field :city, id: "city", placeholder: "City", class: "form-control" %>
              </div>
              <div class="row">
                <div class="col-sm-6">
               		<div class="form-group">
                		<%= f.text_field :st, id: "state", placeholder: "State", class: "form-control" %>
              		</div>
              	</div>
              	<div class="col-sm-6">
  	            	<div class="form-group">
  	              	<%= f.text_field :zip, id: "zip",  placeholder: "Zip", class: "form-control" %>
  	            	</div>
              	</div>
              </div>
              <div class="form-group">
                <%= f.submit "Calculate Price >>", class: "btn btn-success btn-lg btn-block" %>
              </div>
            <% end %>
          </div>
        <div class="panel-footer">
          <h6 class="center" style="color: #9e9e9e"><small>We currently only service Las Vegas / N. Las Vegas / Henderson.</small></h6>
        </div>
        </div>
        <div class="center">
        <%= link_to fa_icon("facebook-official", text: "Check out our reviews"), "https://www.facebook.com/RangerPest/reviews/", target: "_blank", style: "margin-top: 15px; color: #424242;" %>
        </div>
      </div>
    </div>
  </div>

